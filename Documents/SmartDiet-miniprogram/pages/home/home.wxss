.topbar{
  display: flex;
  border-bottom: 1px solid #eee;
}

.topbar-item{
  flex: 1.0;
  text-align: center;
  font-size: 14px;
  color: #999;
  margin-bottom: -1px;
}

.topbar-text{
  display: block;
  width: 30px;
  padding: 10px;
  margin: auto;
}

.topbar-text.active{
  border-bottom: 2px solid #000;
  color: #000;
  font-weight: bold;
}


.hidden{
  display: none;
}

.line-text {
  font-size: 14px;
  border-left: 2px solid #000;
  padding-left: 5px;
  margin: 10px 10px;
}