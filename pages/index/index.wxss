#page {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

#dish-list {
  flex: 1;
  height: 1px; /* necessary because wechat scroll-view is bullshit */
}

.dish-item {
  /* border: 1rpx solid black; */
  margin: 20rpx;
  background-color: #fcfcfc;
  padding: 20rpx;
  border-radius: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.dish-text {
  display: flex;
  flex-direction: column;
}

.dish-weight {
  font-size: small;
  color: #333333;
}

.dish-chevron {
  margin: 10rpx;
  color: grey;
}

.sep {
  width: 750rpx;
  height: 1rpx;
  background-color: #eeeeee;
  margin-left: 20rpx;
}

.button-row {
  display: flex;
  flex-direction: row;
  margin: 0rpx 10rpx 10rpx 10rpx;
}

.button-row > button {
  flex-grow: 1;
}

#spacer {
  width: 20rpx;
}

.default-button {
  background-color: greenyellow;
}

#finish {
  background-color: lightblue;
}

#tip {
  margin: 25rpx;
  padding: 15rpx;
  background-color: #dcdcdc;
}