<view id="page">
  <block wx:if="{{img}}">
    <image class="img" src="{{img}}"></image>
  </block>
  <block wx:else>
    <text class="img">无图片</text>
  </block>
  
  <view id="editor">
    <view class="editor-row">
      <view class="left-pane">
        <text>菜品名</text>
        <input name="name" placeholder="请输入菜品名" value="{{name}}" bindinput="input1"/>
      </view>
    </view>
    <view class="sep"></view>

    <view class="editor-row">
      <view class="left-pane">
        <text>卡路里含量</text>
        <input name="calories" placeholder="请输入每100g所含卡路里" value="{{calories}}" bindinput="input2"/>
      </view>
    </view>
    <view class="sep"></view>

    <view class="editor-row">
      <view class="left-pane">
        <text>餐前重量</text>
        <input placeholder="请输入用餐前的重量" value="{{weight_before}}" bindinput="input3"/>
      </view>
      <view class="right-pane">
        <button style="width:250rpx; height:100rpx; padding: 20rpx; margin: 0rpx" bindtap="bindReadWeightBefore">读取示数</button>
      </view>
    </view>
    <view class="sep"></view>
    
    <view class="editor-row">
      <view class="left-pane">
        <text>餐后重量</text>
        <input placeholder="请输入用餐后的重量" value="{{weight_after}}" bindinput="input4"/>
      </view>
      <view class="right-pane">
        <button style="width:250rpx; height:100rpx; padding: 20rpx; margin: 0rpx" bindtap="bindReadWeightAfter">读取示数</button>
      </view>
    </view>
  </view>
</view>