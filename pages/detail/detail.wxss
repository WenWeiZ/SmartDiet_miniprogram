#page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.img {
  width: 100%;
  height: 50vh;
}

#editor {
  height: 1400rpx;
  flex: 1;
  margin: 20rpx;
  margin-bottom: 50rpx;

  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.editor-row {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.left-pane {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.right-pane {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

input {
  margin-top: 10rpx;
}

.sep {
  height: 1rpx;
  background-color: #eeeeee;
}