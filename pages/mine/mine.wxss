.user{
  background-color:rgb(60,190,140);
  width: 750rpx;
  height:300rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.imageview{
  overflow: hidden;
  width:100%;
  height:100%;
  border-radius: 50%;
}
.box{
  display: flex;
  align-items: center;/* 垂直居中 */
  justify-content: center;/* 水平居中 */
  margin: 40rpx;
  width: 200rpx;
  height: 200rpx; 
  font-size: 20px;
}

.back{
  border: 1px solid white;
  background-color:rgb(226, 235, 231);
  width: 750rpx;
  height: 1000rpx;
  display: flex;
}

.information{
  background-color: white;
  padding: 15rpx;
  margin:50rpx 50rpx 50rpx 50rpx;
  border-radius: 40rpx;
  width:90%;
  display: flex;
  flex-direction: column;
}

.item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  width: 100%;
  border-bottom: 1px solid rgb(226, 235, 231);
}

.text{
  display: flex;
}

.detail{
  background-color: white;
  padding: 0rpx 15rpx 0rpx 15rpx;
  width:90%;
  display: flex;
  flex-direction: column;
}

.detailitem{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  border-bottom: 1px solid rgb(65, 66, 66);
}
